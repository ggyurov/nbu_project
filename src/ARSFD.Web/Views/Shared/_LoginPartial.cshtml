@using ARSFD.Services;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
	<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
		<ul class="nav navbar-nav navbar-right">
			<li>
				<a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@Localizer["Здравей"] @UserManager.GetUserName(User)!</a>
			</li>
			<li>
				<button type="submit" class="btn btn-link navbar-btn navbar-link">@Localizer["Изход"]</button>
			</li>
		</ul>
	</form>
}
else
{
	<ul class="nav navbar-nav navbar-right">
		<li><a asp-area="" asp-controller="Account" asp-action="Register">@Localizer["Регистрация"]</a></li>
		<li><a asp-area="" asp-controller="Account" asp-action="Login">@Localizer["Вход"]</a></li>
	</ul>
}
